<h4 class="card-title">Welcome!</h4>
<h6 class="card-subtitle text-muted">Please login to continue.</h6>
<hr>
<form {{action "authenticate" on="submit"}}>
  {{user/email-field formContext="login" value=email disabled=isLoading}}
  {{user/password-field formContext="login" value=password disabled=isLoading}}
  <button type="submit" class="btn btn-primary" disabled={{isLoading}}>Login</button>
  {{#if isLoading}}
    <div class="mt-3">
      <small class="text-muted">Logging in...</small>
      {{#-bs/progress}}
        {{-bs/progress/bar value=100 animated=true}}
      {{/-bs/progress}}
    </div>
  {{/if}}
  {{#if error}}
    <div class="alert-danger alert mt-3 mb-0" role="alert"><strong>Oops!</strong> {{error.message}}</div>
  {{/if}}
</form>
