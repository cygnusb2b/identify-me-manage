<h4 class="card-title">Create New Account</h4>
<h6 class="card-subtitle text-muted">Signing up is a breeze.</h6>
<hr>
<form {{action "signup" on="submit"}}>
  {{user/email-field formContext="signup" value=email disabled=isLoading label="Your Email Address"}}
  {{user/password-field formContext="signup" value=password disabled=isLoading label="Desired Password"}}
  <button type="submit" class="btn btn-primary" disabled={{isLoading}}>Signup</button>
  {{#if isLoading}}
    <div class="mt-3">
      <small class="text-muted">Creating account...</small>
      {{#-bs/progress}}
        {{-bs/progress/bar value=100 animated=true}}
      {{/-bs/progress}}
    </div>
  {{/if}}
  {{#if error}}
    <div class="alert-danger alert mt-3 mb-0" role="alert"><strong>Oops!</strong> {{error.message}}</div>
  {{/if}}
</form>
