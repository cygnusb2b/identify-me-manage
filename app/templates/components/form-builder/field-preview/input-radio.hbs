{{form-builder/field-preview/-label value=field.label required=field.attributes.required}}
{{form-builder/field-preview/-help-text value=field.helpText}}
<div class="custom-controls-stacked">
  {{#each field.attributes.options as |option|}}
    <label class="custom-control custom-radio">
      {{input type="radio" class="custom-control-input"
        name=field.name
        disabled=field.disabled
        required=field.required
        value=option.value
      }}
      <span class="custom-control-indicator"></span>
      <span class="custom-control-description">{{ option.label }}</span>
    </label>
  {{/each}}
</div>
