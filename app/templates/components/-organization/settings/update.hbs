<div class="card card-outline-muted mt-3">
  <div class="card-header">General Settings</div>
  <div class="card-block">

    {{-form/organization/update organization=modifiableFields}}

    {{#-bs/button "primary" click=(action "update") disabled=(eq isLoading true)}}Update{{/-bs/button}}

    {{#if isLoading}}
      <div class="mt-3">
        <small class="text-muted">Updating organization...</small>
        {{#-bs/progress}}
          {{-bs/progress/bar value=100 animated=true}}
        {{/-bs/progress}}
      </div>
    {{/if}}

    {{#if error}}
      <div class="alert-danger alert mt-3 mb-0" role="alert"><strong>Oops!</strong> {{error.message}}</div>
    {{/if}}

  </div>
</div>
